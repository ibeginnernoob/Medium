// client is generated in the specified folder, from which the client can be imported from to send query to the database

generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

model User {
  id         String  @id @default(uuid())
  firebaseID String  @unique
  email      String  @unique
  username   String?
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}
